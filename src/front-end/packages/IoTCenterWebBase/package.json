{
    "name": "IoTCenterWebBase",
    "version": "6.1.0",
    "description": "物联网综合运营管理平台",
    "license": "MIT",
    "author": "敢为软件<ganweisoft@ganweisoft.com>",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "pnpm -r --parallel  run dev",
        "build": "pnpm -r --parallel run build"
    },
    "pnpm": {
        "peerDependencyRules": {
            "allowedVersions": {
                "vite": ">2.5.10",
                "vue": ">2.0.0"
            }
        },
        "packageExtensions": {
            "vue-template-compiler": {
                "peerDependencies": {
                    "vue": "2.6.14"
                }
            }
        },
        "allowedDeprecatedVersions": {
            "@aspnet/signalr": "*",
            "@babel/plugin-proposal-class-properties": "*",
            "@volar/vue-typescript": "*",
            "request": "*",
            "har-validator": "*",
            "uuid": "*",
            "sourcemap-codec": "*",
            "barcode-detector": "*"
        }
    }
}